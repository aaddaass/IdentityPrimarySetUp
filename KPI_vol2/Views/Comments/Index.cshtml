@model IEnumerable<KPI_vol2.Models.Comments>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttachedToTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttachedToTask.AssignedTo.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentedBy.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
