@model IEnumerable<KPI_vol2.Models.Categories>

@{
    ViewData["Title"] = "Kategorie zgłoszenia";
}

<h1>Kategorie</h1>

<p>
    <a asp-action="Create">Dodaj nowa kategorię</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa kategorii
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edycja</a> |
               @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
