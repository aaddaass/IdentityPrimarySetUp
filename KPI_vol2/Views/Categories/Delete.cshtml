@model KPI_vol2.Models.Categories

@{
    ViewData["Title"] = "Usuwanie kategorii";
}



<h3>Czy na pewno chcesz usunąc ta kategorię?</h3>
<div>
    <h4>Categories</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Anuluj</a>
    </form>
</div>
