@model Status

@{
    ViewData["Title"] = "Utwórz status";
}

<h4>Nowy status</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazwaStatus" class="control-label">Nazwa statusu</label>
                <input asp-for="NazwaStatus" class="form-control" />
                <span asp-validation-for="NazwaStatus" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anuluj</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
