                <select asp-for="AssignedToId" class="form-control" asp-items="@ViewBag.AssignetTo"></select>
                <span asp-validation-for="AssignedToId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriorityId" class="control-label">Priorytet</label>
                <select asp-for="PriorityId" class="form-control" asp-items="@ViewBag.Priority"></select>
                <span asp-validation-for="PriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label">Data ostateczna</label>
