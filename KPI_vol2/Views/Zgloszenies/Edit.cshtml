                <span asp-validation-for="WorkingAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusByAssigned_Id" class="control-label">Status zgłoszenia od osoby przypisanej</label>
                <select asp-for="StatusByAssigned_Id" class="form-control" asp-items="@ViewBag.StatusByAssigned"></select>
                <span asp-validation-for="StatusByAssigned_Id" class="text-danger"></span>
