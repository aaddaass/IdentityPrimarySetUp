@model KPI_vol2.Models.Zdarzenia

@{
    ViewData["Title"] = "Utwórz zdarzenie";
}



<h2>Nowe zdarzenie</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label">Opis zdarzenia</label>
                <textarea asp-for="Opis" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naprawa" class="control-label">Sposób naprawy</label>
                <textarea asp-for="Naprawa" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Naprawa" class="text-danger"></span>
            </div>
            
            
            <div class="form-group ">
                <label asp-for="DataZdarzenia" class="control-label">Data zdarzenia</label>
                <input asp-for="DataZdarzenia" class="form-control" />
                <span asp-validation-for="DataZdarzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataWykonania" class="control-label">Data wykonania</label>
                <input asp-for="DataWykonania" class="form-control" />
                <span asp-validation-for="DataWykonania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OsobaOdpowiedzialna" class="control-label">Osoba odpowiedzialna</label>
                <input asp-for="OsobaOdpowiedzialna" class="form-control" />
                <span asp-validation-for="OsobaOdpowiedzialna" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy zdarzeń</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
